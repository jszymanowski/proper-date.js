{
  "name": "@jszymanowski/simple-date",
  "version": "0.1.0",
  "author": "John Szymanowski",
  "license": "MIT",
  "description": "Simple date object library for JavaScript/TypeScript, without the time nonsense.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jszymanowski/simple-date.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsup lib/index.ts --dts",
    "dev": "tsup lib/index.ts --watch",
    "format": "pnpm biome format --write",
    "lint": "pnpm biome lint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@vitest/coverage-v8": "3.0.8",
    "tsup": "8.4.0",
    "typescript": "5.8.2",
    "vitest": "3.0.8"
  },
  "packageManager": "pnpm@10.6.2"
}
